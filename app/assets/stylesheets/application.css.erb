body {
  background-color:transparent;
  text-align: center;
  padding-bottom:20px;
  color:#ddd;
}
h1 {
  color: white;
  text-shadow: 0 0 10px black;

}
input, select, .dropzone, button {
  color:black;
}
table {
  margin: 0 auto;
}
input[type=file]{
  display:inline-block;
  background-color:white;
}
th{
    font-size:18px;
    font-weight: normal;
    padding:10px 5px;
    text-shadow: 0 0 2px black;
    color:white;
}
a, a:visited, a:active, a:hover {
  color:white;
  text-decoration: underline;
  text-shadow: 0 0 2px black;
  padding:5px;
  border-radius:5px;
}
a:hover {  }
.tag-cloud a:hover, a.hoverable:hover {
  color: #fff; 
  background-color:#ffdddd;
}
.tag-cloud a.tagged{
  text-shadow:none;
  background-color:darkblue;
}
.tag-cloud td {
  border-bottom: 2px solid gray;
}
.tag-cloud tr:last-child td {
  border-bottom: 0;
}
.dark {
  background: rgba(0, 0, 0, 0.3);
  border-radius:5px;
  padding:5px;
  display:inline-block;
}
.light {
  background: rgba(255, 255, 255, 0.2);
  border-radius:5px;
  padding:5px;
  display:inline-block;
}
a img {
  border-radius:5px;
}

.gallery img {
  margin:10px;
}
.black {
  color:black;
  text-shadow: 0 0 2px white;
}
.white {
  color:white;
  text-shadow: 0 0 2px black;
}
.form-holder {
  text-align: center;
  max-width:500px;
  margin: 0 auto;
  background: rgba(0, 0, 0, 0.3);
  border-radius:5px;
  padding:5px;
  display:inline-block;
}
.mini, a.mini img {
  max-width: 50px;
  max-height:50px;
}
.edit-image button {
  float:left;
}

.edit-image .mini:hover {
  opacity: 0.5;
  background-color:red;
}
td.related {
  text-align: left;
}

form.dropzone {
  width:200px;
  margin: 0 auto;
}
img.widest {
  min-width:90%;
  margin: 20px 0
}